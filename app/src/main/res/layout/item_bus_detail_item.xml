<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">
<ImageView  
    android:id="@+id/img"
        android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bus_blue" />
        
    <TextView
        android:id="@+id/line_name"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/color_black1"
        android:padding="5dp"
        android:textSize="16sp"
        android:text="1路"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/start"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/color_gray3"
        android:padding="5dp"
        android:textSize="14sp"
        android:text="银凤凰"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_gray3"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="开往"/>
        <TextView
            android:id="@+id/end"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_gray3"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="银川城投"/>
        </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_gray3"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="最近一辆车："/>
        <TextView
            android:id="@+id/stations"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_gray3"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="剩余 3 站"/>
        <TextView
            android:id="@+id/time"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_gray3"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="5分25秒后到达"/>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>