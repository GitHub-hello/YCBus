<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        layout="@layout/head_item"
        android:id="@+id/include"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="起始点"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/cornflowerblue"
            android:id="@+id/start_at" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:text="开往"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/cornflowerblue"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="55dp"
                android:scaleType="fitXY"
                android:src="@drawable/to_right"/>
            </LinearLayout>
        <TextView
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="终点"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/cornflowerblue"
            android:id="@+id/end_at" />
        </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="首末班："
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/color_gray3"/>
        <TextView
            android:id="@+id/run_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="6：00 -- 22：00"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/color_gray3"/>
        <TextView
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="票价：全程1元"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/color_gray3"/>
        </LinearLayout>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1.0">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
<com.yinchuan.ycbus.view.MyListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@color/color_gray"
    android:dividerHeight="1dp"
    />
            </LinearLayout>
    </ScrollView>
  <LinearLayout
      android:gravity="center_vertical"
      android:layout_height="40dp"
      android:layout_width="match_parent"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/switch_line"
          android:layout_weight="1.0"
          android:layout_height="25dp"
          android:layout_width="40dp"
          android:src="@drawable/power_switch"/>
      <ImageView
          android:id="@+id/refresh"
          android:layout_weight="1.0"
          android:layout_height="25dp"
          android:layout_width="40dp"
          android:src="@drawable/refresh"/>
      <ImageView
          android:id="@+id/collect"
          android:layout_weight="1.0"
          android:layout_height="25dp"
          android:layout_width="40dp"
          android:src="@drawable/star0"/>
      </LinearLayout>
</LinearLayout>
